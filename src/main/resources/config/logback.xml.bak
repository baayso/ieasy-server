<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 控制台输出日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%n%date{yyyy-MM-dd HH:mm:ss.SSS}%n[%-5level]-[%thread]-[%logger.%method\(\)]: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 文件输出日志 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/home/tomcat/tomcat/logs/spring-boot-demo.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/home/tomcat/tomcat/logs/spring-boot-demo.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- <maxHistory>30</maxHistory> -->
        </rollingPolicy>
        <encoder>
            <pattern>%n%date{yyyy-MM-dd HH:mm:ss.SSS}%n[%-5level]-[%thread]-[%logger]: %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <!-- <appender-ref ref="FILE" /> -->
    </root>

</configuration>
